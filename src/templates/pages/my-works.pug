extends ../template 

block variables 
    - var title = 'Мои работы' 

block content 
    section.section__hero
        div.hero.hero__works 
            div.hero__header.hero__blog
                ul.social__list 
                    li.social__item 
                        a(href="#").social__link
                            img(src="assets/images/vk.svg", alt="").social__link--pic
                    li.social__item 
                        a(href="#").social__link
                            img(src="assets/images/github.svg", alt="").social__link--pic
                    li.social__item 
                        a(href="#").social__link
                            img(src="assets/images/in.svg", alt="").social__link--pic
                div.hero__menu 
                    div.drop 
                    div.drop 
                    div.drop
            div.down.block__down
                img.down__icon(src="assets/images/arrow_down.svg") 
            .box
                svg.traingle(xmlns='http://www.w3.org/2000/svg', viewbox='0 0 1000 85', preserveaspectratio='none')
                    polygon.left-traingle(points='0,0   0,86   500.8,86   500.8,75.5')
                    polygon.right-traingle(points='1000,0   1000,86   500,86   500,75.5') 
        div.portfolio
            img(src="assets/images/portfolio_header.svg", alt="").portfolio__pic
        div.user     
            div.user__avatar
                img(src="assets/images/olim.jpg", alt="").user__pic
            div.user__name Саттаров Олимжон
            div.user__text Личный сайт веб разработчика
    section.section.work-slider 
        div.slider__content-title
            h1.slider__title - Мои работы -
        div.slider__content-work 
            div.slider__work 
                div.slider__nav 
                    h2.slider__nav-title -Сайт школы онлайн- Образования
                    hr.slider__line 
                    p.slider__text HTML , CSS, JAVASCRIPT
                    hr.slider__line 
                    a(href="#").slider__link 
                        div.slider__link-icon
                            svg.icons-link(width='20', height='19', fill='#fff')
                                use(xlink:href='img/symbol/sprite.svg#icons--link')
                        div.slider__link-text Посмотреть сайт
            div.slider__info-pic 
                img.slider__info-images(src="assets/images/unit.png", alt="")
            div.slider__info-slider 
                img(src="assets/images/imgloft2.jpg", alt="").slider__info-img 
                img(src="assets/images/imgloft3.jpg", alt="").slider__info-img         
    section.section.reviews  
        div.reviews__content-title 
            h1.reviews__title - что обо мне - говорят 
        ul.reviews__list 
            li.reviews__item 
                img(src="assets/images/zap.jpg", alt="").reviews__item-pic
                p.reviews__item-text Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 2 месяца только самых тяжелых испытаний и бессонных ночей!
                div.reviews__item-avatar 
                    div.item-avatar 
                        img(src="assets/images/8.jpg", alt="").item-avatar__pic
                    p.item-text Ковальчук Дмитрий основатель Loftschool
            li.reviews__item 
                img(src="assets/images/zap.jpg", alt="").reviews__item-pic
                p.reviews__item-text Этот код выдержит любые испытания. Только пожалуйста, не загружается сайт на слишком старых браузерах!
                div.reviews__item-avatar 
                    div.item-avatar 
                        img(src="assets/images/9.jpg", alt="").item-avatar__pic
                    p.item-text Сабанцев Владимир преподаватель
        form.myform 
            h1.myform__title -Связаться со мной-
            input(type="text" placeholder="Имя").myform__input
            input(type="text" placeholder="Email").myform__input
            textarea(name="text", cols="30", rows="10" placeholder="Ваше сообшение").myform__textarea
            div.btn 
                button(type="submit").myform__btn.first Отправить
                button(type="reset").myform__btn.last Очистить
        div.up 
                img.down__icon(src="assets/images/portf_arrow_up.svg")
    footer.footer
        ul.foot__list 
            li.foot__item 
                ul.footmenu__list 
                    li.footmenu__item
                        a(href="/my-works.html").footmenu__link Мои работы
                    li.footmenu__item
                        a(href="/about.html").footmenu__link Обо мне
                    li.footmenu__item
                        a(href="/blog.html").footmenu__link Блог
                    li.footmenu__item
                        a(href="/welcome.html").footmenu__link Авторизация
            li.foot__item 
                ul.foot__social-list 
                    li.foot__social-item 
                        a(href="#").foot__link 
                            img(src="assets/images/vk.svg", alt="").foot__link-pic
                    li.foot__social-item 
                        a(href="#").foot__link 
                            img(src="assets/images/github.svg", alt="").foot__link-pic
                    li.foot__social-item 
                        a(href="#").foot__link 
                            img(src="assets/images/in.svg", alt="").foot__link-pic
        hr.line
        div.foot__descc 
            div.foot__desc-text Я веб-разработчик из Андижане, и этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. 
            div.foot__desc-info © Владимир Астахов | создано с любовью в LoftSchool | 2016
